	public FenetreScore() throws IOException {
		this.setContentPane(new ImagePanel(new ImageIcon(
				"/home/ann2/daviaudl/Bureau/bulle1.jpg").getImage()));
		this.setTitle("La case a bulles");
		this.setExtendedState(Frame.MAXIMIZED_BOTH);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setLocationRelativeTo(null);
		Object[][] titre = { { "Pallier 1" }, { "Pallier 2" }, { "Pallier 3" },
				{ "Pallier 4" }, { "Pallier 5" } };
		Object[][] niveau1 = utilisateur.toMatrice1();
		Object[][] niveau2 = utilisateur.toMatrice2();
		System.out.println(niveau2[0][0]);
		String title[] = { "nombre de clic", "nombre de bulle" };
