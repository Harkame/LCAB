		JTable tableau0 = new JTable(titre, title0);
		JTable tableau1 = new JTable(niveau1, title);
		JTable tableau2 = new JTable(niveau2, title);
		tableau1.setBounds(500, 100, 1000, 1000);
		this.add(new JScrollPane(tableau0), BorderLayout.CENTER);
		this.add(new JScrollPane(tableau1), BorderLayout.CENTER);
		this.add(new JScrollPane(tableau2), BorderLayout.CENTER);
		this.setVisible(true);
		this.setResizable(false);
	}

	public boolean isCellEditable(int row, int col) {
		if (row == 0 && col == 0) {
			return false;
		} else {
			return true;
		}
	}

